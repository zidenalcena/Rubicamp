<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <title>mongodb-bread</title>
  </head>
  <body>
    <div class="container" style="padding: 20px">
      <h1>BREAD (Browse, Read, Edit, Add, Delete)</h1>
      <h2>Filters</h2>
      <form action="/" method="GET">
        <input type="hidden" name="page" value="1">
        <div class="container">
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="idChecked"
                  <%= query.idChecked == 'on' ? 'checked' : ''%>
                  /> ID
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="id"
                  name="id"
                  placeholder="ID"
                  value="<%= query.id && query.idChecked == 'on' ? query.id : ''%>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="stringChecked"
                  <%= query.stringChecked == 'on' ? 'checked' : ''%>
                />String
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="string"
                  name="string"
                  placeholder="String"
                  value="<%= query.string && query.stringChecked == 'on' ? query.string : ''%>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="integerChecked"
                  <%= query.integerChecked == 'on' ? 'checked' : ''%>
                />Integer
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="integer"
                  name="integer"
                  placeholder="Integer"
                  value="<%= query.integer && query.integerChecked == 'on' ? query.integer : ''%>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="floatChecked"
                  <%= query.floatChecked == 'on' ? 'checked' : ''%>
                />Float
              </div>
            </div>
            <div class="col-sm-8">
              <div class="form-group">
                <input
                  type="text"
                  class="form-control"
                  id="float"
                  name="float"
                  placeholder="Float"
                  value="<%= query.float && query.floatChecked == 'on' ? query.float : ''%>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="dateChecked"
                  <%= query.dateChecked == 'on' ? 'checked' : ''%>
                  />Date
              </div>
            </div>
            <div class="col-sm-3">
              <div class="form-group">
                <input
                  type="date"
                  class="form-control"
                  id="startDate"
                  name="startDate"
                  placeholder=""
                  value="<%= query.startDate && query.dateChecked == 'on' ? query.startDate : ''%>"
                />
              </div>
            </div>
            to
            <div class="col-sm-3">
              <div class="form-group">
                <input
                  type="date"
                  class="form-control"
                  id="endDate"
                  name="endDate"
                  placeholder=""
                  value="<%= query.endDate && query.dateChecked == 'on' ? query.endDate : ''%>"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="booleanChecked"
                  <%= query.booleanChecked == 'on' ? 'checked' : ''%>
                />Boolean
              </div>
            </div>
            <div class="form-group col-md-3">
              <select class="form-control" name="boolean" id="boolean">
                <option 
                  <%= !query.boolean && !query.booleanChecked ? 'selected' : ''%>
                >Choose the boolean...</option>
                <option 
                  value="true"
                  <%= query.boolean == 'true' && query.booleanChecked == 'on' ? 'selected' : ''%>
                >true
                </option>
                <option 
                  value="false"
                  <%= query.boolean == 'false' && query.booleanChecked == 'on' ? 'selected' : ''%>
                >false
                </option>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Search</button>
          <a href="/" class="btn btn-info">Reset</a>
        </div>
      </form>
      <br>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">String</th>
            <th scope="col">Integer</th>
            <th scope="col">Float</th>
            <th scope="col">Date</th>
            <th scope="col">Boolean</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(d => { %>
          <tr>
            <th scope="row"><%= d._id.toString().slice(0, 3) %>...<%= d._id.toString().slice(22) %></th>
            <td><%= d.string %></td>
            <td><%= d.integer %></td>
            <td><%= d.float %></td>
            <td><%= d.displayDate %></td>
            <td><%= d.boolean %></td>
            <td>
              <a href="/edit/<%= d._id %>" style="color: white">
                <button type="button" class="btn btn-success">
                  Edit
                </button>
              </a>
              <a
                href="/delete/<%= d._id %>"
                style="color: white"
                onclick="return confirm('Delete ?')"
              >
                <button type="button" class="btn btn-danger">Delete</button>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <nav aria-label="...">
        <% if (pages > 0) { %>
          <ul class="pagination">
            <% if (current == 1) { %>
              <li class="page-item disabled">
                <a class="page-link">First</a>
              </li>
            <% } else { %>
              <li class="page-item">
                <a class="page-link" href="<%= url.replace(`?page=1`, `?page=1`) %>" >First</a>
              </li>
            <% } %> 
            <% let i = (Number(current) > 3 ? Number(current) - 2 : 1) %>
            <% if (i !== 1) { %>
              <li class="page-item disabled">
                <a>...</a>
              </li>
            <% } %> 
            <% for (; i <= (Number(current) + 2) && i <= pages; i++) { %>
              <% if (i == current) { %>
                <li class="page-item active" aria-current="page">
                  <a class="page-link" href="<%= url.replace(`?page=${current}`, `?page=${i}`) %>" name="page"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
              <% } else { %>
                <li class="page-item" aria-current="page">
                  <a class="page-link" href="<%= url.replace(`?page=${current}`, `?page=${i}`) %>" name="page"
                    ><%= i %><span class="sr-only">(current)</span></a
                  >
                </li>
              <% } %> 
            <% } %> 
            <% if (i == Number(current) + 3 && i < pages) { %>
              <li class="page-item disabled">
                <a>...</a>
              </li>
            <% } %> 
            <% if (current == pages) { %>
              <li class="page-item disabled">
                <a class="page-link">Last</a>
              </li>
            <% } else { %>
              <li class="page-item">
                <a class="page-link" href="<%= url.replace(`?page=${pages}`, `?page=${pages}`) %>">Last</a>
              </li>
            <% } %>
          </ul>
        <% } %>
      </nav>
      <a href="/add" style="color: white">
        <button type="button" class="btn btn-primary">
          Add
        </button>
      </a>
    </div>
  </body>
</html>
