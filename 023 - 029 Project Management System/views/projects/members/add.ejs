<%- include('../../partials/headers') %>

<div class="d-flex" style="margin-top: 5%" id="wrapper">

    <%- include('../../partials/sidebar') %>
    <div class="container-fluid">
        <div class="container-fluid">
            <h1><b>Add Members</b></h1>
            <hr />
        </div>

        <div class="contaner-fluid">
            <form method="post">
                <div class="form-group row">
                    <legend class="container-fluid">Members</legend>
                    <fieldset id="members-radio" class="col-form-label col-sm-10 pt-0">
                        <div class="col-sm-10">
                            <% data.forEach((item) => { %>
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="member" id="<%= item.userid %>"
                                    value="<%= item.userid %>">
                                <label class="custom-control-label" for="<%= item.userid %>">
                                    <%= item.firstname %> <%= item.lastname %>
                                </label>
                            </div>
                            <%})%>
                        </div>
                    </fieldset>
                    <legend class="container-fluid">Position</legend>
                    <fieldset id="position-radio" class="col-form-label col-sm-10 pt-0">
                        <div class="col-sm-10">
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio1"
                                    value="Manager">
                                <label class="custom-control-label" for="positionRadio1">
                                    Manager
                                </label>
                            </div>
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio2"
                                    value="Software Developer">
                                <label class="custom-control-label" for="positionRadio2">
                                    Software Developer
                                </label>
                            </div>
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio3"
                                    value="Quality Assurance">
                                <label class="custom-control-label" for="positionRadio3">
                                    Quality Assurance
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button type="submit" class="btn btn-outline-primary">Save</button>
                <a href='/projects/members/<%= projectid %>' class="btn btn-outline-warning">Back</a>
            </form>
        </div>
    </div>
</div>