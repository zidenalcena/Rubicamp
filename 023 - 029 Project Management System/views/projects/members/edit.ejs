<%- include('../../partials/headers') %>

<div class="d-flex" style="margin-top: 5%" id="wrapper">

    <%- include('../../partials/sidebar') %>
    <div class="container-fluid">
        <div class="container-fluid">
            <h1><b>Edit Members</b></h1>
            <hr />
        </div>

        <div class="contaner-fluid">
            <form method="post">
                <div class="form-group row">
                    <label for="authoradd" class="col-sm-1 col-form-label">Member</label>
                    <div class="col-sm-5">
                        <input type="" class="form-control" id="authoradd" name="authoradd" placeholder="Member"
                            value="<%= data.firstname %> <%= data.lastname %>" readonly>
                    </div>
                    <legend class="container-fluid"></legend>

                    <label for="authoradd" class="col-sm-2 col-form-label">Position</label>
                    <fieldset id="position-radio" class="col-form-label col-sm-10 pt-0 ml-5">
                        <div class="col-sm-10">
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio1"
                                    value="Manager" <%= data.role == 'Manager' ? ' checked' : '' %>>
                                <label class="custom-control-label" for="positionRadio1">
                                    Manager
                                </label>
                            </div>
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio2"
                                    value="Software Developer" <%= data.role == 'Software Developer' ? ' checked' : '' %>>
                                <label class="custom-control-label" for="positionRadio2">
                                    Software Developer
                                </label>
                            </div>
                            <div class="custom-control custom-radio my-1 mr-sm-2">
                                <input class="custom-control-input" type="radio" name="position" id="positionRadio3"
                                    value="Quality Assurance" <%= data.role == 'Quality Assurance' ? ' checked' : '' %>>
                                <label class="custom-control-label" for="positionRadio3">
                                    Quality Assurance
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <button type="submit" class="btn btn-outline-primary">Save</button>
                <a href='/projects/members/<%= projectid %>' class="btn btn-outline-warning">Back</a>
            </form>
        </div>

    </div>
</div>